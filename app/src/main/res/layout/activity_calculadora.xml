<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.uni.trabajo.proyecto.CalculadoraActivity">

    <TextView
        android:id="@+id/texviewResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <GridLayout

        android:id="@+id/gridLayout2"
        android:layout_width="0dp"
        android:layout_height="301dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="4"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btce"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:background="@color/colorAccent"
            android:text="CE" />

        <Button
            android:id="@+id/btc"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:background="@color/colorAccent"
            android:text="C" />

        <Button
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:background="@color/colorAccent"
            android:text="back" />

        <Button
            android:id="@+id/btndiv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="0"
            android:background="@color/colorPrimary"
            android:text="/" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:background="@android:color/background_light"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:background="@android:color/background_light"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:background="@android:color/background_light"
            android:text="9" />

        <Button
            android:id="@+id/btnpor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:background="@color/colorPrimary"
            android:text="X" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:background="@android:color/background_light"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:background="@android:color/background_light"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:background="@android:color/background_light"
            android:text="6" />

        <Button
            android:id="@+id/btnMenos"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="2"
            android:background="@color/colorPrimary"
            android:text="-" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:background="@android:color/background_light"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:background="@android:color/background_light"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:background="@android:color/background_light"
            android:text="3" />

        <Button
            android:id="@+id/btnMas"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="3"
            android:background="@color/colorPrimary"
            android:text="+" />

        <Button
            android:id="@+id/btnPunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:background="@android:color/background_light"
            android:text="." />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:background="@android:color/background_light"
            android:text="0" />

        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="4"
            android:background="@android:color/background_light" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_margin="1dp"
            android:layout_rowSpan="2"
            android:background="@android:color/background_light"
            android:gravity="fill_vertical"
            android:text="="
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnSeno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="5"
            android:background="@color/colorPrimary"
            android:text="SIN X" />

        <Button
            android:id="@+id/btnCos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="5"
            android:background="@color/colorPrimary"
            android:text="COS X" />

        <Button
            android:id="@+id/btnTan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="5"
            android:background="@color/colorPrimary"
            android:text="TAN X" />

    </GridLayout>

    <TextView
        android:id="@+id/txtOperador"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/texviewResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/texviewResult" />

</android.support.constraint.ConstraintLayout>
